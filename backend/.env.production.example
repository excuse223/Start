NODE_ENV=production
APP_ENV=production
PORT=8000

# Database — use dedicated user, not postgres
DATABASE_URL=postgresql://work_hours_user:GENERATED_DB_PASSWORD@localhost:5432/work_hours_db

# JWT — generate with: openssl rand -hex 32
JWT_SECRET=GENERATED_SECRET_64_HEX_CHARS
JWT_EXPIRES_IN=7d
ALGORITHM=HS256

# Default admin credentials (created by init_db.py on first run)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=GENERATED_ADMIN_PASSWORD

# CORS — comma-separated list of allowed origins (no trailing slash)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/work-hours-tracker

# Backup
BACKUP_DIR=/var/backups/work-hours-tracker
BACKUP_RETENTION_DAYS=7
BACKUP_REMOTE_ENABLED=false
# BACKUP_REMOTE_HOST=user@backup-server.example.com
# BACKUP_REMOTE_PATH=~/backups/work-hours-tracker

# Security
FORCE_HTTPS=true
